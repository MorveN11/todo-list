{
  "name": "todo-list",
  "version": "0.1.0",
  "private": false,
  "description": "Todo List app built with Turbo",
  "author": {
    "email": "morales.patty.jose@gmail.com",
    "name": "Tutuma's Team"
  },
  "license": "MIT",
  "scripts": {
    "dev": "turbo dev",
